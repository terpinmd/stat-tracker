<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="fullScreenActivityTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/translucent_gray</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonBar" parent="AppBaseTheme">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="modalWindowStyle" parent="AppBaseTheme">
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="textViewLabelStyle" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewStyle" parent="AppBaseTheme">
        <item name="android:textColor">#86A2A2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    
    <style name="statisticActionStyle" parent="AppBaseTheme">
        <item name="android:textColor">#86A2A2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ButtonBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>